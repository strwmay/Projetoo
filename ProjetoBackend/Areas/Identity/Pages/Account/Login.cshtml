@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <section class="login-container">
            <form id="account" method="post">
                <h4 class="text">Fazer Login</h4>
                <div class="form-group text-start mt-4">
                    <input asp-for="Input.Email" class="form-control input-pink" id="email" autocomplete="username" placeholder="E-mail" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group text-start mt-3">
                    <input asp-for="Input.Password" class="form-control input-pink" id="password" autocomplete="current-password" placeholder="Senha" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        <input asp-for="Input.RememberMe" type="checkbox" class="form-check-input" id="rememberMe" />
                        <label for="rememberMe" class="form-check-label">Lembrar de mim?</label>
                    </div>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="link-pink">Esqueci a senha</a>
                </div>
                <button id="login-submit" type="submit" class="btn btn-pink w-100 mt-4">Entrar</button>
                <div class="divider my-3">
                    <span>- - - - - - - - - - - Não tem uma conta? - - - - - - - - - - -</span>
                </div>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-brown w-100">Cadastre-se</a>
            </form>
        </section>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}