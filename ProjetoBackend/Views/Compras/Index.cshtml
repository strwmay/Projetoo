@model IEnumerable<ProjetoBackend.Models.Compra>

@{
    ViewData["Title"] = "Index";
}

<div class="search-container">
    <h1>COMPRAS</h1>
    <form asp-action="Search" method="get" class="search-form">
        <input type="text" name="nome" placeholder="Buscar fornecedores..." class="search-input" />
        <button type="submit" class="search-button">
            <ion-icon name="search-outline"></ion-icon>
        </button>
    </form>
    <a asp-action="Create" class="create-button">
        <ion-icon name="add-outline"></ion-icon>
    </a>
</div>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataCompra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorTotal)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CompraId" class="btn align-items-center"><ion-icon name="create-outline"></ion-icon></a>
                    <a asp-action="Delete" asp-route-id="@item.CompraId" class="btn align-items-center ms-2"><ion-icon name="trash-outline"></ion-icon></a>
                </td>
            </tr>
        }
    </tbody>
</table>
