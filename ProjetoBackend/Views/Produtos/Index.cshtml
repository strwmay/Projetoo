@model IEnumerable<ProjetoBackend.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<div class="search-container mt-5 pt-5">
    <h1>PRODUTOS</h1>
    <form asp-action="Search" method="get" class="search-form">
        <input type="text" name="nome" placeholder="Buscar produtos..." class="search-input" />
        <button type="submit" class="search-button">
            <ion-icon name="search-outline"></ion-icon>
        </button>
    </form>
    <a asp-action="Create" class="create-button">
        <ion-icon name="add-outline"></ion-icon>
    </a>
</div>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estoque)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProdutoId" class="btn align-items-center"><ion-icon name="create-outline"></ion-icon></a>
                    <a asp-action="Delete" asp-route-id="@item.ProdutoId" class="btn align-items-center ms-2"><ion-icon name="trash-outline"></ion-icon></a>
                </td>
            </tr>
        }
    </tbody>
</table>
