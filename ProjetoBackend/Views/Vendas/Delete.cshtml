@model ProjetoBackend.Models.Venda

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex align-items-center mb-3">
    <a asp-action="Index" class="btn btn-link text-dark">
        <ion-icon name="chevron-back-outline" size="large"></ion-icon>
    </a>
    <h1>DELETAR VENDA</h1>
</div>

<div class="p-4">
    <dl class="row mb-4">

        <dt class="col-12 text-uppercase text-pink mb-1">NotaFiscal</dt>
        <dd class="col-12 mb-3">@Html.DisplayFor(model => model.NotaFiscal)</dd>
        <hr class="my-2" style="width: 50%; margin-left: 0;">

        <dt class="col-12 text-uppercase text-pink mb-1">Cliente</dt>
        <dd class="col-12 mb-3">@Html.DisplayFor(model => model.Cliente.Celular)</dd>
        <hr class="my-2" style="width: 50%; margin-left: 0;">

        <dt class="col-12 text-uppercase text-pink mb-1">Data da Venda</dt>
        <dd class="col-12 mb-3">@Html.DisplayFor(model => model.DataVenda)</dd>
        <hr class="my-2" style="width: 50%; margin-left: 0;">

        <dt class="col-12 text-uppercase text-pink mb-1">Valor Total</dt>
        <dd class="col-12 mb-3">@Html.DisplayFor(model => model.ValorTotal)</dd>
    </dl>

    <div class="d-flex flex-column align-items-start mt-4" style="width: 50%;">
        <form asp-action="Delete" class="w-100">
            <input type="hidden" asp-for="VendaId" />
            <button type="submit" class="btn btn-primary w-100 fw-bold text-uppercase" style="font-size: 1rem; padding: 0.5rem 0;">DELETAR</button>
        </form>
        <span class="text-muted small mt-2">*Ao executar essa ação não será possível revertê-la</span>
    </div>
</div>
