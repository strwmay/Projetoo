@model ProjetoBackend.Models.Categoria

@{
    ViewData["Title"] = "Editar";
}

<div class="d-flex my-5">
    <a asp-action="Index" class="btn btn-link text-dark">
        <ion-icon name="chevron-back-outline" size="large"></ion-icon>
    </a>
    <h1>EDITAR CLIENTE</h1>
</div>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <input type="hidden" asp-for="CategoriaId" />
    <div class="row mb-3">
        <div class="col-12">
            <label asp-for="Nome" class="form-label fw-bold text-muted">Nome</label>
            <input asp-for="Nome" class="form-control" placeholder="Digite o nome" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>
</form>

    </>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
